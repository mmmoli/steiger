{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/templates", "!**/dist", "!**/scripts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "includes": ["!**/worker-configuration.d.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": [
      "apps/**",
      "packages/**",
      "!**/build/**",
      "!**/worker-configuration.d.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
