{
  "name": "@steiger/cli",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "description": "Module scaffolding tool for strict DDD + Effect.ts",
  "bin": {
    "steiger": "./dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmmoli/steiger"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "tsup && pnpm copy-package-json && cp -r src/templates dist/",
    "build:ts": "tsup",
    "clean": "rimraf dist/*",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "copy-package-json": "tsx scripts/copy-package-json.ts",
    "lint": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@effect/cli": "^0.69.0",
    "@effect/platform": "^0.90.3",
    "@effect/platform-node": "^0.96.0",
    "@effect/vitest": "^0.25.1",
    "@types/node": "^22.5.2",
    "effect": "^3.17.7",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.0"
  },
  "pnpm": {
    "patchedDependencies": {},
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "msgpackr-extract"
    ]
  },
  "dependencies": {
    "lefthook": "^1.12.2",
    "node-plop": "^0.32.1"
  }
}
